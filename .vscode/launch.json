  "version": "0.2.0",
  "configurations": [
    {
      "name": "Peter Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/",
      "runtimeArgs": [
        "run-script",
        "start"
      ],
      "runtimeExecutable": "npm",
      "env": {
        "MONGO_DBNAME": "peter"
      }
    },
    {
      "name": "Christophe Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/",
      "runtimeArgs": [
        "run-script",
        "start"
      ],
      "runtimeExecutable": "npm",
      "env": {
        "MONGO_DBNAME": "christophe"
      }
    },
    {
      "name": "Angular CLI Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/",
      "runtimeArgs": [
        "run-script",
        "serve"
      ],
      "runtimeExecutable": "npm"
    },
    {
      "name": "Angular CLI Server - integration",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/",
      "runtimeArgs": [
        "run-script",
        "serve:integration"
      ],
      "runtimeExecutable": "npm"
    },
    {
      "name": "Debug Playwright Test",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/",
      "runtimeArgs": [
        "run-script",
        "test:debug"
      ],
      "runtimeExecutable": "npm"
    }
  ]
}
