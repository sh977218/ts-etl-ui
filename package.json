{
  "name": "ts-etl-ui",
  "version": "0.0.0",
  "type": "module",
  "main": "server/server.ts",
  "scripts": {
    "ng": "ng",
    "serve": "ng serve",
    "serve:coverage": "ng serve  e2e-coverage -c coverage ",
    "serve:prod": "ng serve ts-etl-ui -c prod",
    "serve:render": "ng serve ts-etl-ui -c render",
    "serve:ci": "ng serve ts-etl-ui -c ci",
    "serve:integration": "ng serve ts-etl-ui -c integration",
    "serve:integration-local": "ng serve ts-etl-ui -c integration-local",
    "start": "npx tsc --env-file .prod.env --experimental-modules server/server.ts",
    "start:ci": "npx tsc --env-file .ci.env --experimental-modules server/server.ts",
    "build": "ng build ts-etl-ui -c render && node insert-commit-hash.js",
    "build:prod": "ng build ts-etl-ui -c prod && node insert-commit-hash.js",
    "build:ci": "ng build ts-etl-ui -c ci && node insert-commit-hash.js",
    "build:coverage": "ng build e2e-coverage -c production",
    "test": "playwright test --project=ts-elt-ui",
    "test:smoke": "playwright test --project=debug",
    "test:debug": "playwright test --project=debug --debug",
    "test:ui": "playwright test --project=ts-elt-ui --ui",
    "prepare": "husky"
  },
  "private": true,
  "engines": {
    "node": ">=20 <21",
    "npm": ">=10"
  },
  "dependencies": {
    "@angular/animations": "^17.0.3",
    "@angular/cdk": "^17.0.1",
    "@angular/common": "^17.0.3",
    "@angular/compiler": "^17.0.3",
    "@angular/core": "^17.0.3",
    "@angular/forms": "^17.0.3",
    "@angular/material": "^17.0.1",
    "@angular/material-moment-adapter": "^17.3.10",
    "@angular/platform-browser": "^17.0.3",
    "@angular/platform-browser-dynamic": "^17.0.3",
    "@angular/router": "^17.0.3",
    "cookie-parser": "^1.4.6",
    "coverage-istanbul-loader": "^3.0.5",
    "ejs": "^3.1.10",
    "errorhandler": "^1.5.1",
    "express": "^4.19.2",
    "file-saver": "^2.0.5",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongodb": "^6.7.0",
    "node-fetch": "^3.3.2",
    "nyc": "^17.0.0",
    "rxjs": "~7.5.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^17.0.0",
    "@angular-devkit/build-angular": "^17.0.1",
    "@angular-eslint/builder": "17.1.1",
    "@angular-eslint/eslint-plugin": "17.1.1",
    "@angular-eslint/eslint-plugin-template": "17.1.1",
    "@angular-eslint/schematics": "17.1.1",
    "@angular-eslint/template-parser": "17.1.1",
    "@angular/cli": "~17.0.1",
    "@angular/compiler-cli": "^17.0.3",
    "@angular/material": "^17.0.1",
    "@playwright/test": "^1.44.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/errorhandler": "^1.5.3",
    "@types/file-saver": "^2.0.7",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.6",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "lodash": "^4.17.21",
    "ngx-cookie-service": "^17.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.3",
    "typescript": "~5.4.2"
  }
}
